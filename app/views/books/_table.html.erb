<table id='table'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody >
    <% @books.each do |book| %>
      <tr>
        <td><%= book.name %></td>
        <td><%= book.phone %></td>
        <td><%= link_to 'Edit', edit_book_path(book), remote: true %></td>
        <td><%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' }, remote: true, class: 'delete' %></td>
      </tr>
    <% end %>
  </tbody>
</table>